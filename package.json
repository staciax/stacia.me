{
  "name": "stacia.me",
  "description": "a small universe of mine.",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "build:analyze": "bun --bun next build && bun --bun next experimental-analyze",
    "start": "bun --bun next start",
    "lint": "biome check . && biome format .",
    "lint:ci": "biome ci .",
    "format": "biome check --write . && biome format . --write",
    "types:check": "fumadocs-mdx && bun --bun next typegen && tsc --noEmit",
    "postinstall": "fumadocs-mdx",
    "doctor": "react-doctor . --verbose --no-ami -y",
    "doctor:verbose": "react-doctor . --verbose --no-ami -y"
  },
  "dependencies": {
    "@fumadocs/base-ui": "~16.6.8",
    "@remixicon/react": "~4.9.0",
    "fumadocs-core": "~16.6.8",
    "fumadocs-mdx": "~14.2.9",
    "lucide-react": "~0.576.0",
    "next": "16.1.6",
    "next-themes": "~0.4.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-theme-switch-animation": "~1.0.0",
    "tailwind-merge": "~3.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@tailwindcss/postcss": "~4.2.1",
    "@types/mdx": "~2.0.13",
    "@types/negotiator": "^0.6.4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "react-doctor": "~0.0.29",
    "tailwindcss": "~4.2.1",
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.9"
}
