{
  "project_name": "stacia.me",
  "format_on_save": "on",
  "lsp": {
    "biome": {
      "binary": {
        "path": "./node_modules/@biomejs/biome/bin/biome",
        "arguments": ["lsp-proxy"]
      },
      "settings": {
        "config_path": "./biome.json",
        "require_config_file": true
      }
    }
  },
  "languages": {
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "!eslint",
        "!tailwindcss-language-server",
        "..."
      ],
      "formatter": [
        { "language_server": { "name": "biome" } },
        { "code_action": "source.fixAll.biome" },
        { "code_action": "source.organizeImports.biome" }
      ]
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "!eslint",
        "..."
      ],
      "formatter": [
        { "language_server": { "name": "biome" } },
        { "code_action": "source.fixAll.biome" },
        { "code_action": "source.organizeImports.biome" }
      ]
    },
    "JavaScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls",
        "!eslint",
        "!tailwindcss-language-server",
        "..."
      ],
      "formatter": [
        { "language_server": { "name": "biome" } },
        { "code_action": "source.fixAll.biome" },
        { "code_action": "source.organizeImports.biome" }
      ]
    },
    "JSON": {
      "language_servers": ["biome", "..."],
      "formatter": [{ "language_server": { "name": "biome" } }]
    },
    "JSONC": {
      "language_servers": ["biome", "..."],
      "formatter": [{ "language_server": { "name": "biome" } }]
    },
    "CSS": {
      "language_servers": ["biome", "..."],
      "formatter": [{ "language_server": { "name": "biome" } }]
    }
  }
}
